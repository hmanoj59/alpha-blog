<% if @user.errors.any? %>
    <h2>The following errors prevented from saving</h2>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
          <li> <%= msg %> </li>
      <% end %>
    </ul>
<% end %>
<h1 align = "center"> Sign Up for Alpha Blog </h1>
<div class="row">
  <div class="col-xs-12">

<%= form_for @user do |f| %>
     <div class="'form-group">
     <div class="control-label col-sm-12">
      <%= f.label :username %>
       </div>
       <div class="col-sm-8">
      <%= f.text_field :username, class:"form-control", placeholder: "Enter username", autofocus: true %>
         </div>
       </div>
        <div class = "form-group">
          <div class = "control-label col-sm-2">
      <%= f.label :email %>
            </div>
          <div class="col-sm-8">
      <%= f.email_field :email,  class: "form-control", placeholder: "Enter Email"  %>
            </div>
          </div>
          <div class = "form-group">
            <div class = "control-label col-sm-2">
        <%= f.label :password %></br>
              </div>
            <div class="col-sm-8">
        <%= f.password_field :password,  class: "form-control", placeholder: "Enter password"  %>
              </div>
            </div>
        <div class = "form-group" >
          <div class = "col -sm-10">
      <%= f.submit "Sign Up", class: 'btn btn-primary btn-lg' %>
          </div>
        </div>
<% end %>
<%= link_to " Go to Articles listing", articles_path %>

</div>
  </div>
